<odoo>
    <data noupdate="1">

        <!-- Model external ID for reference -->
        <record id="model_twod_prediction_service" model="ir.model">
            <field name="name">2D Prediction Service</field>
            <field name="model">twod.prediction.service</field>
        </record>

        <!-- Cron to update history -->
        <record id="ir_cron_update_history_data" model="ir.cron">
            <field name="name">Update 2D History Data</field>
            <field name="model_id" ref="model_twod_prediction_service"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_history_data()</field>
            <field name="interval_number">60</field> <!-- every 60 minutes -->
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field> <!-- repeat forever -->
            <field name="active" eval="True"/>
        </record>

        <!-- Cron to update live data -->
        <record id="ir_cron_update_live_data" model="ir.cron">
            <field name="name">Update 2D Live Data</field>
            <field name="model_id" ref="model_twod_prediction_service"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_live_data()</field>
            <field name="interval_number">1</field> <!-- every 30 minutes -->
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron to predict 2D -->
        <record id="ir_cron_predict_twod" model="ir.cron">
            <field name="name">Predict 2D Numbers</field>
            <field name="model_id" ref="model_twod_prediction_service"/>
            <field name="state">code</field>
            <field name="code">model.cron_predict_twod()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall">2025-08-09 10:30:00</field> <!-- change as needed -->
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
